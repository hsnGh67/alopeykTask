{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "@components/*": ["./src/Components/*"],
      "@assets/*": ["./src/assets/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@contexts/*": ["./src/contexts/*"],
      "@navigation/*": ["./src/navigation/*"]
    }
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
